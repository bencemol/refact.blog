---
import { CMS } from '../models/cms';
import { formatDate } from '../util/date-format';

export interface Props {
  post: CMS.Post;
}
const { post } = Astro.props;


---

<style lang="scss">
.post {
  overflow: hidden;
}

.cover {
  width: 100%;
  min-height: 200px;
  max-height: 400px;
  aspect-ratio: 16 / 9;
  background-color: var(--theme-text-lighter);
  object-fit: cover;
}

.link {
  color: unset;
  text-decoration: none;
  display: block;

  &:hover,
  &:focus {
    .title {
      text-decoration-color: var(--theme-text-accent);
      color: var(--theme-text-accent)
    }
  }
}

.title {
  margin: var(--gutter) 0;
  transition: color var(--enter-fast);
  text-decoration: underline;
  text-decoration-color: transparent;
  transition: text-decoration-color var(--enter-fast), color var(--enter-fast);;
}

.description {
  max-width: var(--max-width);
}
</style>

<article class="post">
  <a class="link" href={post.url} aria-label={`Read ${post.title}`}>
    { post.cover 
      ? <img class="cover round" src={post.cover} alt={post.title}>
      : null }
    <div class="data">
      <h2 class="title">{post.title}</h2>
      <time class="date" datetime={post.date}>{formatDate(post.date)}</time>
      <p class="description">
        {post.description}
      </p>
    </div>
  </a>
</article>
