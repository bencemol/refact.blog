---
import { CMS } from '../models/cms';

export interface Props {
  post: CMS.Post;
}
const { post } = Astro.props;

function formatDate(date) {
  return new Date(date).toUTCString().replace(/(\d\d\d\d) .*/, '$1'); // remove everything after YYYY
}
---

<style lang="scss">
.post {
  padding: 3rem 0;
}

.cover {
  border-radius: var(--border-radius);
  width: 100%;
  max-height: 400px;
  background-color: var(--theme-text-lighter);
  object-fit: cover;
}

.link {
  text-transform: uppercase;
  margin-left: 1em;
}

time {
  display: block;
  margin-top: 0.25rem;
  margin-bottom: 0.5em;
  font-size: 0.8rem;
}

.description {
  max-width: var(--max-width);
}
</style>

<article class="post">
  {post.cover ? <img class="cover" src={post.cover} alt={post.title}> : null}
  <div class="data">
    <h2>{post.title}</h2>
    <time class="date" datetime={post.date}>{formatDate(post.date)}</time>
    <p class="description">
      {post.description}
      <a class="link" href={post.url} aria-label={`Read ${post.title}`}>Read</a>
    </p>
  </div>
</article>
