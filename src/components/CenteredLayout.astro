<style lang="scss">
:global(body) {
  width: 100%;
  display: grid;
  grid-template-rows: var(--theme-navbar-height) 1fr var(--theme-footer-height);
  --gutter: 0.5rem;
  --doc-padding: 2rem;
}

.layout {
  overflow: initial;
  padding: 0 var(--gutter);
  display: grid;
  grid-template-columns: minmax(0, var(--max-width));
  justify-content: center;
}

:global(.layout > *) {
  max-width: var(--max-width);
  margin: 0 auto;
}

@media (max-width: 41em) {
  :global(.layout > *) {
    max-width: unset;
    margin: 0;
  }
}

